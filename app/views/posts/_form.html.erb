<%= form_with model: post, local: true do |f| %>
  <div class="form-group mt-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="form-group mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'create', class: 'btn btn-outline-success mt-3'%>
  </div>
<% end %>
