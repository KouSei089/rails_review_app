<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>Profile Edit</h1>
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <div class="form-group mt-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div class="form-group mt-3">
          <%= f.label :email %>
          <%= f.text_area :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :avatar_image %>
          <%= f.file_field :avatar_image, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_image_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag @user.avatar_image.url,
                        id: 'preview',
                        size: '300x200' %>
        </div>
        <div class="actions">
          <%= f.submit 'update', class: 'btn btn-outline-success mt-3'%>
        </div>
      <% end %>
    </div>
  </div>
</div>

