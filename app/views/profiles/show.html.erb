<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>プロフィール</h1>
      <table class="table">
        <tr>
          <th scope="row">氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row">アバター</th>
          <td>
          <%= image_tag @user.avatar_image.url, size: '40x40', class: 'rounded-circle mr15' %>
          </td>
        </tr>
      </table>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
    </div>
  </div>
</div>
